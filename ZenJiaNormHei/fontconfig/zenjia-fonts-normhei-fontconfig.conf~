<?xml version="1.0"?>
<!DOCTYPE fontconfig SYSTEM "fonts.dtd">
<fontconfig>
    <!-- disabling hinting rule for bigger size-->
    <match target="font">
        <test name="family" compare="eq">
                <string>ZenJia Norm Hei</string>
        </test>
        <test name="pixelsize" compare="more_eq">
                <double>12</double>
        </test>
        <edit name="hinting" mode="assign">
                <bool>false</bool>
        </edit>
    </match>
    <!-- enable embolden for ZenJia Norm Hei -->
    <match target="font">
        <test name="family" compare="contains">
                <string>ZenJia Norm Hei</string>
        </test>
        <test compare="more_eq" target="pattern" name="weight">
                <int>180</int>	
        </test>
        <edit mode="assign" name="embolden">
                <bool>true</bool>
        </edit>
    </match>
    <!-- Locale-specific overrides rule from UMing for sans-serif generic family -->
    <match>
        <test name="lang" compare="contains">
                <string>zh-tw</string>
        </test>
        <test name="family" compare="eq">
                <string>sans-serif</string>
        </test>
        <edit name="family" mode="prepend">
                <string>ZenJia Norm Hei</string>
        </edit>
    </match>
    <!-- use Cantarell font when ZenJia Norm Hei is requested for Latin -->
    <alias binding="strong">
        <family>ZenJia Norm Hei</family>
        <prefer>
                <family>Cantarell</family>
        </prefer>
    </alias>
    <!-- fallback sequence for ZenJia Norm Hei -->
    <alias>
        <family>ZenJia Norm Hei</family>
        <accept>
                <family>VL PGothic</family>
                <family>Droid Sans Japanese</family>
                <family>Droid Sans Fallback</family>
        </accept>
        <default>
                <family>sans-serif</family>
        </default>      
    </alias>
    <!-- use ZenJia Norm Hei font when Cantarell is requested for traditional Chinese -->
    <alias>
        <family>Cantarell</family>
        <accept>
                <family>ZenJia Norm Hei</family>
        </accept>
        <default>
                <family>sans-serif</family>
        </default> 
    </alias>
</fontconfig>
